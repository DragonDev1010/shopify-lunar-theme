<div style="display: flex; align-items: center; justify-content: space-between; padding: 16px 50px 16px 27px">
  <button class="primary-default-btn" onclick="openNav()">
    <p style="">MENU</p>
  </button>
  <img src="{{section.settings.logo | img_url: '81x49' }}" />
  <img src="{{section.settings.cart-icon | img_url: '19x24'}}" alt="icon" />
</div>
<script>
  /* Set the width of the side navigation to 250px */
  function openNav() {
    document.getElementById("mySidenav").style.width = "50%";
  }
</script>
{% schema %}
  {
    "name": "header-1",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Upload"
      }, {
        "type": "image_picker",
        "id": "cart-icon",
        "label": "Cart Icon Upload"
      }
    ]
  }
{% endschema %}