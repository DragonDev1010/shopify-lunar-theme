      <a href="/high-rhode">
        <p class="slide-navbar-text-lg">
          High Rhode
        </p>
      </a>
      <a href="/kin-spritz">
        <p class="slide-navbar-text-lg">
          Kin Spritz
        </p>
      </a>
      <div style="display: flex; flex-direction: column; column-gap: 1em; margin-top: 50px; color: var(--black-1-color); font-weight:bolder;">
        <a href="/shop_all">
          <p class="universe-14-30">shop all</p>
        </a>
        <a href="/about_kin">
          <p class="universe-14-30">about kin</p>
        </a>
        <a href="the_kinship">
          <p class="universe-14-30">the kinship</p>
        </a>
      </div>
    </div>
  </div>
</div>
<div id="main"></div>
<script>
  /* Set the width of the side navigation to 0 */
  function closeNav() {
    document.getElementById("slideNavbar").style.width = "0";
  }
</script>
